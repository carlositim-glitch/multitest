  <script>
    // ==================== THEME TOGGLE ====================
    function toggleTheme() {
      const html = document.documentElement;
      const currentTheme = html.getAttribute('data-theme');
      const lightIcon = document.getElementById('lightIcon');
      const darkIcon = document.getElementById('darkIcon');
      
      if (currentTheme === 'light') {
        html.setAttribute('data-theme', 'dark');
        localStorage.setItem('theme', 'dark');
        lightIcon.classList.remove('active');
        darkIcon.classList.add('active');
      } else {
        html.setAttribute('data-theme', 'light');
        localStorage.setItem('theme', 'light');
        darkIcon.classList.remove('active');
        lightIcon.classList.add('active');
      }
    }

    function loadSavedTheme() {
      const savedTheme = localStorage.getItem('theme') || 'dark';
      const html = document.documentElement;
      const lightIcon = document.getElementById('lightIcon');
      const darkIcon = document.getElementById('darkIcon');
      
      html.setAttribute('data-theme', savedTheme);
      
      if (savedTheme === 'light') {
        darkIcon.classList.remove('active');
        lightIcon.classList.add('active');
      } else {
        lightIcon.classList.remove('active');
        darkIcon.classList.add('active');
      }
    }

    // ==================== STATS VISIBILITY TOGGLE ====================
    function toggleStatsVisibility() {
      const statsSwitch = document.getElementById('statsSwitch');
      const statsPanel = document.getElementById('statsRealTime');
      
      statsSwitch.classList.toggle('active');
      
      if(statsPanel) {
        statsPanel.classList.toggle('hidden');
      }
      
      const isVisible = statsSwitch.classList.contains('active');
      localStorage.setItem('statsVisible', isVisible ? '1' : '0');
      
      console.log('Stats visible:', isVisible ? 'SI (1)' : 'NO (0)');
    }

    function loadStatsPreference() {
      const saved = localStorage.getItem('statsVisible');
      const isVisible = saved === null ? true : saved === '1';
      
      const statsSwitch = document.getElementById('statsSwitch');
      
      if (isVisible) {
        statsSwitch.classList.add('active');
      } else {
        statsSwitch.classList.remove('active');
      }
    }

    function forceShowStats() {
      const statsSwitch = document.getElementById('statsSwitch');
      const statsPanel = document.getElementById('statsRealTime');
      
      statsSwitch.classList.add('active');
      if(statsPanel) {
        statsPanel.classList.remove('hidden');
      }
    }

    function restoreStatsPreference() {
      const saved = localStorage.getItem('statsVisible');
      const isVisible = saved === null ? true : saved === '1';
      
      const statsSwitch = document.getElementById('statsSwitch');
      const statsPanel = document.getElementById('statsRealTime');
      
      if (isVisible) {
        statsSwitch.classList.add('active');
        if(statsPanel) statsPanel.classList.remove('hidden');
      } else {
        statsSwitch.classList.remove('active');
        if(statsPanel) statsPanel.classList.add('hidden');
      }
    }

    // ==================== CONFIG ====================
    const useLocalData = false;
    const preguntasFolder = 'preguntas';

    const CONFIG = {
      mostrarProgresoTanda: false,
      mostrarRestantesGlobal: false
    };

    // ==================== VARIABLES GLOBALES ====================
    let usuarioActual = null;
    let categoriaActual = null;
    let masterPreguntasPool = [];
    let preguntasRealizadasGlobal = 0;
    let remainingPreguntas = [];
    let failedPreguntas = [];
    let preguntasActuales = [];
    let indicePreguntaActual = 0;
    let respuestasUsuario = [];
    let numeroTanda = 0;
    let totalPreguntas = 0;
    let preguntasPorTanda = 30;
    let aciertosGlobal = 0;
    let inicioTestTimestamp = null;

    function progresoKey() {
      if (!usuarioActual || !categoriaActual) return null;
      return `progreso_${usuarioActual.uid}_${categoriaActual}`;
    }

    // ==================== FUNCIONES FIREBASE AUTH ====================
    function loginWithGoogle() {
      console.log('üîµ Iniciando login con Google...');
      
      showLoginLoading(true);
      hideErrorMessage();

      const btnGoogle = document.getElementById('btnGoogleLogin');
      if (btnGoogle) btnGoogle.disabled = true;

      const provider = new firebase.auth.GoogleAuthProvider();
      provider.addScope('profile');
      provider.addScope('email');
      provider.setCustomParameters({
        'prompt': 'select_account'
      });

      firebase.auth().signInWithPopup(provider)
        .then((result) => {
          console.log('‚úÖ Login Google exitoso:', result.user);
          handleLoginSuccess(result.user);
        })
        .catch((error) => {
          console.error('‚ùå Error login Google:', error);
          
          let errorMsg = 'Error en login con Google';
          
          switch(error.code) {
            case 'auth/popup-blocked':
              errorMsg = 'El navegador bloque√≥ la ventana emergente. Por favor, permite las ventanas emergentes.';
              break;
            case 'auth/popup-closed-by-user':
              errorMsg = 'Cerraste la ventana de login antes de completar el proceso.';
              break;
            case 'auth/cancelled-popup-request':
              errorMsg = 'Se cancel√≥ la solicitud de login.';
              break;
            case 'auth/unauthorized-domain':
              errorMsg = 'Este dominio no est√° autorizado. Verifica la configuraci√≥n en Firebase Console.';
              break;
            case 'auth/operation-not-allowed':
              errorMsg = 'El login con Google no est√° habilitado. Act√≠valo en Firebase Console.';
              break;
            case 'auth/network-request-failed':
              errorMsg = 'Error de red. Verifica tu conexi√≥n a internet.';
              break;
            default:
              errorMsg = `Error: ${error.message}`;
          }
          
          showErrorMessage(errorMsg);
          showLoginLoading(false);
          if (btnGoogle) btnGoogle.disabled = false;
        });
    }

    function loginWithEmail() {
      const email = document.getElementById('emailInput').value.trim();
      const password = document.getElementById('passwordInput').value;

      if (!email || !password) {
        showErrorMessage('Por favor completa ambos campos');
        return;
      }

      if (!validateEmail(email)) {
        showErrorMessage('Por favor ingresa un email v√°lido');
        return;
      }

      showLoginLoading(true);
      hideErrorMessage();

      firebase.auth().signInWithEmailAndPassword(email, password)
        .then((userCredential) => {
          console.log('‚úÖ Login email exitoso:', userCredential.user);
          handleLoginSuccess(userCredential.user);
        })
        .catch((error) => {
          console.error('‚ùå Error login email:', error);
          
          let errorMsg = 'Error al iniciar sesi√≥n';
          
          switch(error.code) {
            case 'auth/user-not-found':
              errorMsg = 'No existe una cuenta con este email';
              break;
            case 'auth/wrong-password':
              errorMsg = 'Contrase√±a incorrecta';
              break;
            case 'auth/invalid-email':
              errorMsg = 'Email inv√°lido';
              break;
            case 'auth/user-disabled':
              errorMsg = 'Esta cuenta ha sido deshabilitada';
              break;
            case 'auth/too-many-requests':
              errorMsg = 'Demasiados intentos fallidos. Intenta m√°s tarde';
              break;
            default:
              errorMsg = error.message;
          }
          
          showErrorMessage(errorMsg);
          showLoginLoading(false);
        });
    }

    function registerWithEmail() {
      const email = document.getElementById('emailInput').value.trim();
      const password = document.getElementById('passwordInput').value;

      if (!email || !password) {
        showErrorMessage('Por favor completa ambos campos');
        return;
      }

      if (!validateEmail(email)) {
        showErrorMessage('Por favor ingresa un email v√°lido');
        return;
      }

      if (password.length < 6) {
        showErrorMessage('La contrase√±a debe tener al menos 6 caracteres');
        return;
      }

      showLoginLoading(true);
      hideErrorMessage();

      firebase.auth().createUserWithEmailAndPassword(email, password)
        .then((userCredential) => {
          console.log('‚úÖ Registro exitoso:', userCredential.user);
          handleLoginSuccess(userCredential.user);
        })
        .catch((error) => {
          console.error('‚ùå Error al registrarse:', error);
          
          let errorMsg = 'Error al crear la cuenta';
          
          switch(error.code) {
            case 'auth/email-already-in-use':
              errorMsg = 'Este email ya est√° registrado. Intenta iniciar sesi√≥n';
              break;
            case 'auth/invalid-email':
              errorMsg = 'Email inv√°lido';
              break;
            case 'auth/weak-password':
              errorMsg = 'La contrase√±a es muy d√©bil';
              break;
            default:
              errorMsg = error.message;
          }
          
          showErrorMessage(errorMsg);
          showLoginLoading(false);
        });
    }

    function handleLoginSuccess(user) {
      usuarioActual = {
        uid: user.uid,
        email: user.email,
        displayName: user.displayName || user.email
      };

      document.getElementById('userEmail').textContent = usuarioActual.email;
      showLoginLoading(false);
      mostrarPantalla('screenCategorias');

      crearPerfilUsuario();
      cargarCategoriasDisponibles();

      if (typeof analytics !== 'undefined') {
        firebase.analytics().setUserId(user.uid);
        firebase.analytics().logEvent('login', {
          method: user.providerData[0]?.providerId || 'unknown'
        });
      }
    }

    function crearPerfilUsuario() {
      const userRef = db.collection('usuarios').doc(usuarioActual.uid);

      userRef.set({
        email: usuarioActual.email,
        displayName: usuarioActual.displayName,
        fechaRegistro: firebase.firestore.FieldValue.serverTimestamp(),
        ultimoAcceso: firebase.firestore.FieldValue.serverTimestamp()
      }, { merge: true }).catch(error => {
        console.error('Error creando perfil:', error);
      });
    }

    function validateEmail(email) {
      const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return re.test(email);
    }

    function showErrorMessage(message) {
      const errorDiv = document.getElementById('errorMessage');
      if (errorDiv) {
        errorDiv.textContent = message;
        errorDiv.classList.add('show');
      }
    }

    function hideErrorMessage() {
      const errorDiv = document.getElementById('errorMessage');
      if (errorDiv) {
        errorDiv.classList.remove('show');
      }
    }

    function showLoginLoading(show) {
      document.getElementById('loginLoading').style.display = show ? 'block' : 'none';
    }

    function cerrarSesion() {
      firebase.auth().signOut()
        .then(() => {
          console.log('‚úÖ Sesi√≥n cerrada correctamente');
          usuarioActual = null;
          categoriaActual = null;
          masterPreguntasPool = [];
          remainingPreguntas = [];
          preguntasActuales = [];
          indicePreguntaActual = 0;
          respuestasUsuario = [];
          numeroTanda = 0;

          if (analytics) {
            firebase.analytics().setUserId(null);
          }

          document.getElementById('emailInput').value = '';
          document.getElementById('passwordInput').value = '';
          hideErrorMessage();

          mostrarPantalla('screenLogin');
        })
        .catch((error) => {
          console.error('‚ùå Error cerrando sesi√≥n:', error);
          showErrorMessage('Error al cerrar sesi√≥n');
        });
    }

    firebase.auth().onAuthStateChanged((user) => {
      if (user) {
        console.log('‚úÖ Usuario ya autenticado:', user);
        handleLoginSuccess(user);
      } else {
        console.log('üîê Usuario no autenticado');
        mostrarPantalla('screenLogin');
      }
    });

    function mostrarPantalla(screenId) {
      console.log('üîÑ Mostrando pantalla:', screenId);
      document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
      document.getElementById(screenId).classList.add('active');
    }

    function sanitizeForFilename(id) {
      return String(id).replace(/[^a-z0-9\\-_.]/gi, '_');
    }

    // ==================== CATEGOR√çAS ====================
    async function cargarCategoriasDisponibles() {
      console.log('üìö Cargando categor√≠as disponibles...');

      document.getElementById('loadingCategorias').style.display = 'block';
      document.getElementById('listaCategorias').style.display = 'none';
      document.getElementById('sinAcceso').style.display = 'none';

      if (useLocalData && typeof window.CATEGORIAS !== 'undefined') {
        try {
          const categoriasObj = window.CATEGORIAS;
          const keys = Object.keys(categoriasObj || {});

          const categoriasMostrables = keys
            .map(k => ({ id: k, ...categoriasObj[k] }))
            .filter(cat => cat && (cat.activa !== false))
            .filter(cat => {
              if (cat.emailsAutorizados && Array.isArray(cat.emailsAutorizados) && cat.emailsAutorizados.length > 0) {
                if (!usuarioActual || !usuarioActual.email) return false;
                return cat.emailsAutorizados.includes(usuarioActual.email);
              }
              return true;
            });

          document.getElementById('loadingCategorias').style.display = 'none';

          if (!categoriasMostrables || categoriasMostrables.length === 0) {
            document.getElementById('sinAcceso').style.display = 'block';
            return;
          }

          let html = '';
          categoriasMostrables.forEach((cat) => {
            html += `
              <div class="categoria-card" onclick="seleccionarCategoria('${cat.id}')">
                <h3>${cat.nombre}</h3>
                <div class="info">
                  <span>üìù ${cat.totalPreguntas || 0} preguntas</span>
                  <span>üéØ ${cat.preguntasPorTanda || 30} por tanda</span>
                </div>
              </div>
            `;
          });

          document.getElementById('listaCategorias').innerHTML = html;
          document.getElementById('listaCategorias').style.display = 'grid';
          return;
        } catch (error) {
          console.error('‚ùå Error procesando categorias locales:', error);
          document.getElementById('loadingCategorias').style.display = 'none';
          alert('Error al procesar categor√≠as locales: ' + error.message);
          return;
        }
      }

      db.collection('categorias')
        .where('activa', '==', true)
        .get()
        .then((querySnapshot) => {
          console.log('‚úÖ Categor√≠as recibidas:', querySnapshot.size);
          document.getElementById('loadingCategorias').style.display = 'none';

          if (querySnapshot.empty) {
            document.getElementById('sinAcceso').style.display = 'block';
            return;
          }

          let html = '';
          querySnapshot.forEach((doc) => {
            const cat = doc.data();
            html += `
              <div class="categoria-card" onclick="seleccionarCategoria('${doc.id}')">
                <h3>${cat.nombre}</h3>
                <div class="info">
                  <span>üìù ${cat.totalPreguntas || 0} preguntas</span>
                  <span>üéØ ${cat.preguntasPorTanda || 30} por tanda</span>
                </div>
              </div>
            `;
          });

          document.getElementById('listaCategorias').innerHTML = html;
          document.getElementById('listaCategorias').style.display = 'grid';
        })
        .catch((error) => {
          console.error('‚ùå Error cargando categor√≠as:', error);
          document.getElementById('loadingCategorias').style.display = 'none';
          alert('Error al cargar categor√≠as: ' + error.message);
        });
    }

    function seleccionarCategoria(catId) {
      console.log('üéØ Seleccionando categor√≠a:', catId);
      categoriaActual = catId;
      iniciarTest();
    }

    function volverCategorias() {
      console.log('‚Ü©Ô∏è Volviendo a categor√≠as');
      categoriaActual = null;
      masterPreguntasPool = [];
      remainingPreguntas = [];
      preguntasActuales = [];
      indicePreguntaActual = 0;
      respuestasUsuario = [];
      numeroTanda = 0;
      cargarCategoriasDisponibles();
      mostrarPantalla('screenCategorias');
    }

    // ==================== GESTI√ìN DE TANDAS ====================
    function prepararTanda() {
      const panel = document.getElementById('tandaOptions');
      if (panel) panel.style.display = 'none';
      const feedback = document.getElementById('feedbackContainer');
      if (feedback) feedback.style.display = 'none';

      preguntasActuales = [];
      const capacidad = Math.min(preguntasPorTanda, remainingPreguntas.length + failedPreguntas.length);

      while (preguntasActuales.length < capacidad && failedPreguntas.length > 0) {
        preguntasActuales.push(failedPreguntas.shift());
      }

      while (preguntasActuales.length < capacidad && remainingPreguntas.length > 0) {
        preguntasActuales.push(remainingPreguntas.shift());
      }

      preguntasActuales = mezclarArray(preguntasActuales);

      preguntasActuales.forEach((p, idx) => {
        if (!p.id) p.id = `q_${Date.now()}_${idx}_${Math.random().toString(36).substring(2,6)}`;
      });

      indicePreguntaActual = 0;
      respuestasUsuario = new Array(preguntasActuales.length).fill(null);
      numeroTanda++;
      console.log(`üî¢ Preparada tanda #${numeroTanda} con ${preguntasActuales.length} preguntas`);

      guardarProgreso();
      restoreStatsPreference();
      mostrarPregunta();
    }

    function finalizarTanda() {
      let correctas = 0;
      let incorrectas = 0;
      const preguntasFalladasEstaTanda = [];
      const sinResponder = [];

      respuestasUsuario.forEach((respuesta, index) => {
        const pregunta = preguntasActuales[index];
        if (!pregunta) return;
        if (respuesta === pregunta.respuestaCorrecta) {
          correctas++;
        } else if (respuesta !== null) {
          incorrectas++;
          preguntasFalladasEstaTanda.push(pregunta);
        } else {
          sinResponder.push(pregunta);
        }
      });

      preguntasFalladasEstaTanda.forEach(p => {
        if (!failedPreguntas.find(x => x.id === p.id)) {
          failedPreguntas.push(p);
        }
      });

      sinResponder.forEach(p => {
        if (!remainingPreguntas.find(r => r.id === p.id) && !failedPreguntas.find(f => f.id === p.id)) {
          remainingPreguntas.push(p);
        }
      });

      guardarProgreso();
      forceShowStats();

      const feedback = document.getElementById('feedbackContainer');
      feedback.style.display = 'block';
      feedback.innerHTML = `
        <div class="alert alert-info">
          <strong>Tanda finalizada:</strong> ${correctas} correctas, ${incorrectas} incorrectas.
        </div>
      `;

      if (failedPreguntas.length > 0) {
        const panel = document.getElementById('tandaOptions');
        if (panel) panel.style.display = 'flex';
        return;
      }

      if (remainingPreguntas.length > 0) {
        setTimeout(() => {
          prepararTanda();
        }, 500);
        return;
      }

      finalizarTest();
    }

    function repetirFallos() {
      if (failedPreguntas.length === 0) return;

      const panel = document.getElementById('tandaOptions');
      if (panel) panel.style.display = 'none';
      const feedback = document.getElementById('feedbackContainer');
      if (feedback) feedback.style.display = 'none';

      remainingPreguntas = failedPreguntas.slice();
      failedPreguntas = [];

      prepararTanda();
    }

    function saltarTanda() {
      const panel = document.getElementById('tandaOptions');
      if (panel) panel.style.display = 'none';
      const feedback = document.getElementById('feedbackContainer');
      if (feedback) feedback.style.display = 'none';

      if (remainingPreguntas.length > 0) {
        prepararTanda();
        return;
      }

      finalizarTest();
    }

    function guardarProgreso() {
      const key = progresoKey();
      if (!key) return;

      const estado = {
        masterIds: masterPreguntasPool.map(p => p.id || null),
        remainingIds: remainingPreguntas.map(p => p.id || null),
        failedIds: failedPreguntas.map(p => p.id || null),
        preguntasActualesIds: preguntasActuales.map(p => p.id || null),
        respuestasUsuario,
        indicePreguntaActual,
        numeroTanda,
        preguntasPorTanda,
        preguntasRealizadasGlobal,
        timestamp: Date.now()
      };

      try {
        localStorage.setItem(key, JSON.stringify(estado));
      } catch (e) {
        console.warn('No se pudo guardar en localStorage:', e);
      }

      try {
        const docId = `${usuarioActual.uid}_${categoriaActual}`;
        db.collection('progresos').doc(docId).set({
          ...estado,
          usuarioId: usuarioActual.uid,
          categoria: categoriaActual,
          updatedAt: firebase.firestore.FieldValue.serverTimestamp()
        }, { merge: true }).catch(err => console.warn('No se pudo guardar progreso en Firestore:', err));
      } catch (e) {
        console.warn('Error guardando progreso en Firestore:', e);
      }

      console.log('üíæ Progreso guardado');
    }

    function cargarProgresoSiExiste() {
      const key = progresoKey();
      if (!key) return null;
      try {
        const raw = localStorage.getItem(key);
        if (!raw) return null;
        const estado = JSON.parse(raw);
        if (typeof estado.preguntasRealizadasGlobal === 'number') {
          preguntasRealizadasGlobal = estado.preguntasRealizadasGlobal;
        } else {
          preguntasRealizadasGlobal = 0;
        }
        return estado;
      } catch (e) {
        console.warn('Error leyendo progreso en localStorage:', e);
        return null;
      }
    }

    function eliminarProgreso() {
      const key = progresoKey();
      if (!key) return;
      try {
        localStorage.removeItem(key);
      } catch (e) {}
      try {
        const docId = `${usuarioActual.uid}_${categoriaActual}`;
        db.collection('progresos').doc(docId).delete().catch(()=>{});
      } catch (e) {}
    }

    // ==================== TEST ====================
    function iniciarTest() {
      console.log('üöÄ Iniciando test para categor√≠a:', categoriaActual);
      mostrarPantalla('screenTest');

      masterPreguntasPool = [];
      remainingPreguntas = [];
      failedPreguntas = [];
      preguntasActuales = [];
      indicePreguntaActual = 0;
      respuestasUsuario = [];
      numeroTanda = 0;
      preguntasRealizadasGlobal = 0;
      aciertosGlobal = 0;
      inicioTestTimestamp = Date.now();

      if (useLocalData && typeof window.CATEGORIAS !== 'undefined') {
        const catData = window.CATEGORIAS[categoriaActual];
        if (!catData) {
          alert('Categor√≠a local no encontrada: ' + categoriaActual);
          volverCategorias();
          return;
        }

        document.getElementById('testCategoriaNombre').textContent = catData.nombre;
        preguntasPorTanda = catData.preguntasPorTanda || 30;
        totalPreguntas = catData.totalPreguntas || 0;

        const fileName = sanitizeForFilename(categoriaActual) + '.json';
        const preguntasPath = `${preguntasFolder}/${fileName}`;

        fetch(preguntasPath)
          .then(res => {
            if (!res.ok) throw new Error('HTTP ' + res.status + ' al cargar ' + preguntasPath);
            return res.json();
          })
          .then(allPreguntas => {
            let preguntasFiltradas = Array.isArray(allPreguntas) ? allPreguntas : [];

            preguntasFiltradas = preguntasFiltradas.filter((p, idx) => {
              if (p.activa === false) return false;
              if (!p.categoria) {
                p.categoria = categoriaActual;
                if (!p.id) p.id = `q_local_${idx}`;
                return true;
              }
              return String(p.categoria) === String(categoriaActual);
            });

            if (!preguntasFiltradas || preguntasFiltradas.length === 0) {
              alert('No se encontraron preguntas para esta categor√≠a (local). Ruta: ' + preguntasPath);
              volverCategorias();
              return;
            }

            preguntasFiltradas.forEach((p, i) => {
              if (!p.id) p.id = `q_${i}_${Math.random().toString(36).substring(2,8)}`;
            });

            masterPreguntasPool = mezclarArray(preguntasFiltradas.slice());
            remainingPreguntas = masterPreguntasPool.slice();

            const progreso = cargarProgresoSiExiste();
            if (progreso && progreso.preguntasActualesIds && progreso.preguntasActualesIds.length > 0) {
              const quiereContinuar = confirm('Se ha encontrado progreso guardado para esta categor√≠a. ¬øDeseas continuar donde lo dejaste?');
              if (quiereContinuar) {
                const idToQuestion = {};
                masterPreguntasPool.forEach(p => idToQuestion[p.id] = p);

                failedPreguntas = (progreso.failedIds || []).map(id => idToQuestion[id]).filter(Boolean);
                remainingPreguntas = (progreso.remainingIds || []).map(id => idToQuestion[id]).filter(Boolean);
                preguntasActuales = (progreso.preguntasActualesIds || []).map(id => idToQuestion[id]).filter(Boolean);
                respuestasUsuario = progreso.respuestasUsuario || new Array(preguntasActuales.length).fill(null);
                indicePreguntaActual = progreso.indicePreguntaActual || 0;
                numeroTanda = progreso.numeroTanda || 1;

                if (!preguntasActuales || preguntasActuales.length === 0) {
                  prepararTanda();
                } else {
                  mostrarPregunta();
                }
                return;
              } else {
                eliminarProgreso();
                remainingPreguntas = masterPreguntasPool.slice();
              }
            }

            prepararTanda();
          })
          .catch(error => {
            console.error('‚ùå Error cargando preguntas locales:', error);
            alert('Error al cargar preguntas locales: ' + error.message);
            volverCategorias();
          });

        return;
      }

      db.collection('categorias').doc(categoriaActual).get()
        .then((doc) => {
          if (!doc.exists) {
            throw new Error('Categor√≠a no encontrada');
          }
          
          const categoriaData = doc.data();
          document.getElementById('testCategoriaNombre').textContent = categoriaData.nombre;
          preguntasPorTanda = categoriaData.preguntasPorTanda || 30;
          totalPreguntas = categoriaData.totalPreguntas || 0;
          
          return db.collection('preguntas')
            .where('categoria', '==', categoriaActual)
            .where('activa', '==', true)
            .get();
        })
        .then((querySnapshot) => {
          console.log('‚úÖ Preguntas recibidas:', querySnapshot.size);

          if(querySnapshot.empty) {
            alert('No se encontraron preguntas para esta categor√≠a');
            volverCategorias();
            return;
          }

          masterPreguntasPool = [];
          querySnapshot.forEach((doc, idx) => {
            const data = { id: doc.id, ...doc.data() };
            masterPreguntasPool.push(data);
          });

          masterPreguntasPool = mezclarArray(masterPreguntasPool);
          remainingPreguntas = masterPreguntasPool.slice();

          const progreso = cargarProgresoSiExiste();
          if (progreso && progreso.preguntasActualesIds && progreso.preguntasActualesIds.length > 0) {
            const quiereContinuar = confirm('Se ha encontrado progreso guardado para esta categor√≠a. ¬øDeseas continuar donde lo dejaste?');
            if (quiereContinuar) {
              const idToQuestion = {};
              masterPreguntasPool.forEach(p => idToQuestion[p.id] = p);

              failedPreguntas = (progreso.failedIds || []).map(id => idToQuestion[id]).filter(Boolean);
              remainingPreguntas = (progreso.remainingIds || []).map(id => idToQuestion[id]).filter(Boolean);
              preguntasActuales = (progreso.preguntasActualesIds || []).map(id => idToQuestion[id]).filter(Boolean);
              respuestasUsuario = progreso.respuestasUsuario || new Array(preguntasActuales.length).fill(null);
              indicePreguntaActual = progreso.indicePreguntaActual || 0;
              numeroTanda = progreso.numeroTanda || 1;

              if (!preguntasActuales || preguntasActuales.length === 0) {
                prepararTanda();
              } else {
                mostrarPregunta();
              }
              return;
            } else {
              eliminarProgreso();
              remainingPreguntas = masterPreguntasPool.slice();
            }
          }

          prepararTanda();
        })
        .catch((error) => {
          console.error('‚ùå Error cargando preguntas:', error);
          alert('Error al cargar preguntas: ' + error.message);
        });
    }

    function mezclarArray(array) {
      const newArray = [...array];
      for (let i = newArray.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [newArray[i], newArray[j]] = [newArray[j], newArray[i]];
      }
      return newArray;
    }

    function mostrarPregunta() {
      const pregunta = preguntasActuales[indicePreguntaActual];
      const total = preguntasActuales.length;

      if (!pregunta) {
        console.warn('No hay pregunta en el √≠ndice actual, finalizando tanda...');
        finalizarTanda();
        return;
      }

      document.getElementById('preguntaNumero').textContent = `Pregunta ${indicePreguntaActual + 1} de ${total} (Tanda ${numeroTanda})`;

      const progreso = ((indicePreguntaActual + 1) / total) * 100;
      const progressBarContainer = document.querySelector('.progress-bar');
      if (CONFIG.mostrarProgresoTanda) {
        if (progressBarContainer) progressBarContainer.style.display = 'block';
        document.getElementById('progressBar').style.width = progreso + '%';
      } else {
        if (progressBarContainer) progressBarContainer.style.display = 'none';
      }

      document.getElementById('preguntaTexto').textContent = pregunta.pregunta;

      const letras = ['A', 'B', 'C', 'D'];
      let opcionesHtml = '';

      if(pregunta.opciones) {
        letras.forEach((letra) => {
          const textoOpcion = pregunta.opciones[letra];
          if(textoOpcion) {
            const seleccionada = respuestasUsuario[indicePreguntaActual] === letra ? 'selected' : '';
            opcionesHtml += `
              <div class="opcion ${seleccionada}" onclick="seleccionarOpcion('${letra}')">
                <div class="opcion-letra">${letra}</div>
                <div class="opcion-texto">${textoOpcion}</div>
              </div>
            `;
          }
        });
      }

      opcionesHtml += `
        <button class="btn btn-secondary" style="margin-top: 16px;" onclick="explicarPreguntaConChatGPT()">
          üí¨ Explicar con IA
        </button>
      `;

      document.getElementById('opcionesContainer').innerHTML = opcionesHtml;
      document.getElementById('feedbackContainer').style.display = 'none';

      const btnAnterior = document.getElementById('btnAnterior');
      const btnSiguiente = document.getElementById('btnSiguiente');
      const btnFinalizar = document.getElementById('btnFinalizar');

      if(indicePreguntaActual > 0) {
        btnAnterior.style.display = 'block';
      } else {
        btnAnterior.style.display = 'none';
      }

      if(indicePreguntaActual < total - 1) {
        btnSiguiente.style.display = 'block';
        btnFinalizar.style.display = 'none';
      } else {
        btnSiguiente.style.display = 'none';
        btnFinalizar.style.display = 'block';
      }

      const tieneRespuesta = respuestasUsuario[indicePreguntaActual] !== null;
      btnSiguiente.disabled = !tieneRespuesta;
      btnFinalizar.disabled = !tieneRespuesta;
      mostrarStatsEnTiempoReal();
    }

    function mostrarStatsEnTiempoReal() {
      const respondidas = respuestasUsuario.filter(r => r !== null).length;
      const totalTanda = preguntasActuales.length;
      const progreso = Math.round((respondidas / totalTanda) * 100);

      let correctasTemp = 0;
      respuestasUsuario.forEach((resp, idx) => {
        if(resp && preguntasActuales[idx] && resp === preguntasActuales[idx].respuestaCorrecta) {
          correctasTemp++;
        }
      });

      const porcentajeTemp = respondidas > 0 ? Math.round((correctasTemp / respondidas) * 100) : 0;

      const totalMaster = masterPreguntasPool.length || (remainingPreguntas.length + preguntasActuales.length + failedPreguntas.length);
      const realizadas = preguntasRealizadasGlobal || 0;
      const restantesGlobal = Math.max(0, totalMaster - realizadas);

      let statsPanel = document.getElementById('statsRealTime');
      if(!statsPanel) {
        statsPanel = document.createElement('div');
        statsPanel.id = 'statsRealTime';
        document.querySelector('.pregunta-container').insertBefore(
          statsPanel, 
          document.querySelector('.pregunta-header')
        );
      }

      const bloques = [];

      bloques.push(`
        <div style="text-align: center;">
          <div style="color: var(--muted); font-size: 12px;">Tanda</div>
          <div style="color: var(--accent); font-size: 20px; font-weight: 700;">${numeroTanda}</div>
        </div>
      `);

      bloques.push(`
        <div style="text-align: center;">
          <div style="color: var(--muted); font-size: 12px;">Respondidas</div>
          <div style="color: var(--accent); font-size: 20px; font-weight: 700;">${respondidas}/${totalTanda}</div>
        </div>
      `);

      if (CONFIG.mostrarProgresoTanda) {
        bloques.push(`
          <div style="text-align: center;">
            <div style="color: var(--muted); font-size: 12px;">Progreso</div>
            <div style="color: var(--accent); font-size: 20px; font-weight: 700;">${progreso}%</div>
          </div>
        `);
      }

      bloques.push(`
        <div style="text-align: center;">
          <div style="color: var(--muted); font-size: 12px;">Acierto</div>
          <div style="color: ${porcentajeTemp >= 70 ? 'var(--success)' : 'var(--danger)'}; font-size: 20px; font-weight: 700;">${porcentajeTemp}%</div>
        </div>
      `);

      bloques.push(`
        <div style="text-align: center;">
          <div style="color: var(--muted); font-size: 12px;">Correctas</div>
          <div style="color: var(--success); font-size: 20px; font-weight: 700;">${correctasTemp}</div>
        </div>
      `);

      statsPanel.innerHTML = bloques.join('\n');
      
      const isVisible = document.getElementById('statsSwitch').classList.contains('active');
      if (!isVisible) {
        statsPanel.classList.add('hidden');
      } else {
        statsPanel.classList.remove('hidden');
      }
    }

    let autoAdvanceTimeout = null;
    
    function seleccionarOpcion(letra) {
      if (autoAdvanceTimeout) {
        clearTimeout(autoAdvanceTimeout);
        autoAdvanceTimeout = null;
      }

      const pregunta = preguntasActuales[indicePreguntaActual];
      if (!pregunta) return;

      const prev = respuestasUsuario[indicePreguntaActual];
      const correcto = pregunta.respuestaCorrecta;

      const fueNullAntes = prev === null;
      if (fueNullAntes) {
        preguntasRealizadasGlobal = (preguntasRealizadasGlobal || 0) + 1;
      }

      respuestasUsuario[indicePreguntaActual] = letra;

      const antesEraCorrecta = prev === correcto;
      const ahoraEsCorrecta = letra === correcto;

      if (!antesEraCorrecta && ahoraEsCorrecta) {
        aciertosGlobal = (aciertosGlobal || 0) + 1;
        const idx = failedPreguntas.findIndex(p => p.id === pregunta.id);
        if (idx !== -1) failedPreguntas.splice(idx, 1);
      } else if (antesEraCorrecta && !ahoraEsCorrecta) {
        aciertosGlobal = Math.max(0, (aciertosGlobal || 0) - 1);
        if (!failedPreguntas.find(p => p.id === pregunta.id)) {
          failedPreguntas.push(pregunta);
        }
      } else {
        if (!ahoraEsCorrecta) {
          if (!failedPreguntas.find(p => p.id === pregunta.id)) {
            failedPreguntas.push(pregunta);
          }
        }
      }

      document.querySelectorAll('.opcion').forEach((el) => {
        const letraOpcion = el.querySelector('.opcion-letra').textContent;
        if (letraOpcion === letra) {
          el.classList.add('selected');
        } else {
          el.classList.remove('selected');
        }
      });

      document.getElementById('btnSiguiente').disabled = false;
      document.getElementById('btnFinalizar').disabled = false;
      mostrarStatsEnTiempoReal();

      guardarProgreso();

      if (ahoraEsCorrecta) {
        const opcionesEls = document.querySelectorAll('.opcion');
        opcionesEls.forEach(el => {
          const letraOpcion = el.querySelector('.opcion-letra').textContent;
          if (letraOpcion === letra) el.classList.add('correcta');
          if (letraOpcion === pregunta.respuestaCorrecta) el.classList.add('correcta');
        });

        autoAdvanceTimeout = setTimeout(() => {
          if (indicePreguntaActual < preguntasActuales.length - 1) {
            indicePreguntaActual++;
            mostrarPregunta();
          } else {
            finalizarTanda();
          }
          autoAdvanceTimeout = null;
        }, 650);
      } else {
        const opcionesEls = document.querySelectorAll('.opcion');
        opcionesEls.forEach(el => {
          const letraOpcion = el.querySelector('.opcion-letra').textContent;
          if (letraOpcion === letra) el.classList.add('incorrecta');
          if (letraOpcion === pregunta.respuestaCorrecta) el.classList.add('correcta');
        });
      }
    }

    function siguientePregunta() {
      if(indicePreguntaActual < preguntasActuales.length - 1) {
        indicePreguntaActual++;
        mostrarPregunta();
      }
    }

    function preguntaAnterior() {
      if(indicePreguntaActual > 0) {
        indicePreguntaActual--;
        mostrarPregunta();
      }
    }

    function finalizarTest() {
      const totalMaster = (masterPreguntasPool && masterPreguntasPool.length) ?
        masterPreguntasPool.length :
        (preguntasActuales.length + remainingPreguntas.length + failedPreguntas.length);

      const totalRealizadas = preguntasRealizadasGlobal || 0;
      const correctas = aciertosGlobal || 0;
      const incorrectas = Math.max(0, totalRealizadas - correctas);
      const fallosRestantes = failedPreguntas.length || 0;

      const duracionSegundos = inicioTestTimestamp ? Math.round((Date.now() - inicioTestTimestamp) / 1000) : null;
      const porcentaje = totalMaster > 0 ? Math.round((correctas / totalMaster) * 100) : null;

      const resultado = {
        usuarioId: (usuarioActual && usuarioActual.uid) ? usuarioActual.uid : null,
        categoria: categoriaActual || null,
        fecha: Date.now(),
        totalPreguntas: totalMaster,
        realizadas: totalRealizadas,
        correctas,
        incorrectas,
        fallosRestantes,
        porcentajeAcierto: porcentaje,
        duracionSegundos,
        numeroTanda,
      };

      guardarProgreso();
      guardarResultadoFinal(resultado);

      document.getElementById('resultadoPorcentaje').textContent = (porcentaje !== null ? porcentaje : 0) + '%';
      document.getElementById('resultadoCorrectas').textContent = correctas;
      document.getElementById('resultadoIncorrectas').textContent = incorrectas;
      document.getElementById('resultadoTotal').textContent = totalMaster;

      obtenerEstadisticasUsuario().then(stats => {
        mostrarEstadisticasDetalladas(stats, correctas, incorrectas, totalMaster, porcentaje || 0);
      });

      mostrarPantalla('screenResultado');

      console.log('‚úÖ Resultado final guardado:', resultado);
    }

    function guardarResultadoFinal(resultado) {
      try {
        const key = `resultados_${resultado.usuarioId || 'anon'}_${resultado.categoria || 'general'}`;
        let lista = [];
        const raw = localStorage.getItem(key);
        if (raw) {
          lista = JSON.parse(raw);
          if (!Array.isArray(lista)) lista = [];
        }
        lista.push(resultado);
        localStorage.setItem(key, JSON.stringify(lista));
      } catch (e) {
        console.warn('No se pudo guardar resultado en localStorage:', e);
      }

      try {
        if (typeof db !== 'undefined' && db.collection) {
          db.collection('resultados').add({
            ...resultado,
            savedAt: firebase.firestore.FieldValue.serverTimestamp()
          }).then(() => {
            console.log('Resultado guardado en Firestore');
          }).catch(err => {
            console.warn('No se pudo guardar resultado en Firestore:', err);
          });
        }
      } catch (e) {
        console.warn('Error guardando resultado en Firestore:', e);
      }
    }

    function obtenerEstadisticasUsuario() {
      return db.collection('resultados')
        .where('usuarioId', '==', usuarioActual.uid)
        .where('categoria', '==', categoriaActual)
        .orderBy('fecha', 'desc')
        .limit(10)
        .get()
        .then((querySnapshot) => {
          const resultados = [];
          querySnapshot.forEach(doc => {
            resultados.push(doc.data());
          });

          if (resultados.length === 0) {
            return {
              success: false,
              message: 'No hay resultados previos'
            };
          }

          const porcentajes = resultados.map(r => r.porcentajeAcierto || r.porcentaje || 0);
          const promedio = Math.round(porcentajes.reduce((a, b) => a + b, 0) / porcentajes.length);
          const mejor = Math.max(...porcentajes);
          const peor = Math.min(...porcentajes);
          const ultimos5 = porcentajes.slice(0, 5);

          return {
            success: true,
            promedio: promedio,
            mejor: mejor,
            peor: peor,
            intentos: resultados.length,
            ultimos5: ultimos5,
            totalResultados: resultados.length
          };
        })
        .catch((error) => {
          console.error('Error obteniendo estad√≠sticas:', error);
          return {
            success: false,
            error: error.message
          };
        });
    }

    function mostrarEstadisticasDetalladas(stats, correctas, incorrectas, total, porcentaje) {
      if(!stats || !stats.success) {
        document.getElementById('statsBody').innerHTML = `
          <div class="alert alert-info">
            <span>‚ÑπÔ∏è</span>
            <span>No hay estad√≠sticas disponibles todav√≠a</span>
          </div>
        `;
        return;
      }

      let statsHtml = '';

      statsHtml += `
        <div class="stats-section">
          <div class="stats-section-title">
            <span>üìã</span>
            <span>Resumen del Test Actual</span>
          </div>
          <div class="stats-grid">
            <div class="stats-mini-card">
              <div class="mini-label">Aciertos</div>
              <div class="mini-value" style="color: var(--success);">${correctas}</div>
            </div>
            <div class="stats-mini-card">
              <div class="mini-label">Errores</div>
              <div class="mini-value" style="color: var(--danger);">${incorrectas}</div>
            </div>
            <div class="stats-mini-card">
              <div class="mini-label">Porcentaje</div>
              <div class="mini-value">${porcentaje}%</div>
            </div>
            <div class="stats-mini-card">
              <div class="mini-label">Total</div>
              <div class="mini-value">${total}</div>
            </div>
          </div>
        </div>
      `;

      statsHtml += `
        <div class="stats-section">
          <div class="stats-section-title">
            <span>üìà</span>
            <span>Estad√≠sticas Hist√≥ricas</span>
          </div>
          <div class="stats-row">
            <span class="stats-label">Promedio en esta categor√≠a</span>
            <span class="stats-value ${getColorClass(stats.promedio || 0)}">${stats.promedio || 0}%</span>
          </div>
          <div class="stats-row">
            <span class="stats-label">Mejor resultado obtenido</span>
            <span class="stats-value success">${stats.mejor || 0}%</span>
          </div>
          <div class="stats-row">
            <span class="stats-label">Peor resultado obtenido</span>
            <span class="stats-value danger">${stats.peor || 0}%</span>
          </div>
          <div class="stats-row">
            <span class="stats-label">Total de intentos realizados</span>
            <span class="stats-value">${stats.intentos || 1}</span>
          </div>
        </div>
      `;

      if(stats.ultimos5 && stats.ultimos5.length > 0) {
        const promedioReciente = Math.round(stats.ultimos5.reduce((a, b) => a + b, 0) / stats.ultimos5.length);
        const tendencia = calcularTendencia(stats.ultimos5);

        statsHtml += `
          <div class="stats-section">
            <div class="stats-section-title">
              <span>üìä</span>
              <span>Evoluci√≥n Reciente</span>
            </div>
            <div class="stats-row">
              <span class="stats-label">Promedio √∫ltimos ${stats.ultimos5.length} tests</span>
              <span class="stats-value">${promedioReciente}%</span>
            </div>
            <div class="stats-row">
              <span class="stats-label">Tendencia</span>
              <span class="stats-value">${tendencia.icono} ${tendencia.texto}</span>
            </div>
            <div class="stats-row">
              <span class="stats-label">√öltimos resultados</span>
              <span class="stats-value">${stats.ultimos5.join('%, ')}%</span>
            </div>
            <div class="progress-bar-mini">
              <div class="fill" style="width: ${promedioReciente}%"></div>
            </div>
          </div>
        `;
      }

      const tasaAcierto = Math.round((correctas / total) * 100);
      const rendimiento = getRendimiento(tasaAcierto);

      statsHtml += `
        <div class="stats-section">
          <div class="stats-section-title">
            <span>üéØ</span>
            <span>An√°lisis de Rendimiento</span>
          </div>
          <div class="stats-row">
            <span class="stats-label">Tasa de acierto</span>
            <span class="stats-value ${getColorClass(tasaAcierto)}">${tasaAcierto}%</span>
          </div>
          <div class="stats-row">
            <span class="stats-label">Evaluaci√≥n</span>
            <span class="stats-value">${rendimiento.icono} ${rendimiento.texto}</span>
          </div>
          <div class="stats-row">
            <span class="stats-label">Preguntas acertadas</span>
            <span class="stats-value success">${correctas} de ${total}</span>
          </div>
          <div class="stats-row">
            <span class="stats-label">Preguntas falladas</span>
            <span class="stats-value danger">${incorrectas} de ${total}</span>
          </div>
        </div>
      `;

      if(stats.promedio && stats.promedio > 0) {
        const diferencia = porcentaje - stats.promedio;
        const comparativa = diferencia >= 0 ? 
          { icono: 'üìà', texto: `+${diferencia.toFixed(1)}% sobre tu promedio`, color: 'success' } :
          { icono: 'üìâ', texto: `${diferencia.toFixed(1)}% bajo tu promedio`, color: 'danger' };

        statsHtml += `
          <div class="stats-section">
            <div class="stats-section-title">
              <span>‚öñÔ∏è</span>
              <span>Comparativa</span>
            </div>
            <div class="stats-row">
              <span class="stats-label">Respecto a tu promedio</span>
              <span class="stats-value ${comparativa.color}">${comparativa.icono} ${comparativa.texto}</span>
            </div>
            <div class="stats-row">
              <span class="stats-label">Respecto a tu mejor resultado</span>
              <span class="stats-value">${porcentaje >= stats.mejor ? 'üèÜ ¬°Nuevo r√©cord!' : `${stats.mejor - porcentaje}% por debajo`}</span>
            </div>
          </div>
        `;
      }

      document.getElementById('statsBody').innerHTML = statsHtml;
    }

    function getColorClass(porcentaje) {
      if(porcentaje >= 80) return 'success';
      if(porcentaje >= 60) return '';
      return 'danger';
    }

    function calcularTendencia(ultimos) {
      if(ultimos.length < 2) return { icono: '‚û°Ô∏è', texto: 'Sin datos suficientes' };

      const mitad = Math.floor(ultimos.length / 2);
      const primeraMedia = ultimos.slice(0, mitad).reduce((a, b) => a + b, 0) / mitad;
      const segundaMedia = ultimos.slice(mitad).reduce((a, b) => a + b, 0) / (ultimos.length - mitad);

      const diferencia = segundaMedia - primeraMedia;

      if(diferencia > 5) return { icono: 'üìà', texto: 'Mejorando' };
      if(diferencia < -5) return { icono: 'üìâ', texto: 'Descendiendo' };
      return { icono: '‚û°Ô∏è', texto: 'Estable' };
    }

    function getRendimiento(porcentaje) {
      if(porcentaje >= 90) return { icono: 'üèÜ', texto: 'Excelente' };
      if(porcentaje >= 80) return { icono: '‚≠ê', texto: 'Muy Bueno' };
      if(porcentaje >= 70) return { icono: 'üëç', texto: 'Bueno' };
      if(porcentaje >= 60) return { icono: 'üìö', texto: 'Aceptable' };
      return { icono: 'üìñ', texto: 'Necesita mejorar' };
    }

    function nuevoTest() {
      iniciarTest();
    }

    function consultarChatGPT() {
      const pregunta = encodeURIComponent('Tengo dudas sobre el test que acabo de realizar. ¬øPuedes ayudarme a entender mejor los conceptos?');
      window.open('https://chat.openai.com/?q=' + pregunta, '_blank');
    }

    function toggleStats() {
      const content = document.getElementById('statsContent');
      const icon = document.getElementById('statsIcon');

      if(content.classList.contains('open')) {
        content.classList.remove('open');
        icon.classList.remove('open');
      } else {
        content.classList.add('open');
        icon.classList.add('open');
      }
    }

    function explicarPreguntaConChatGPT() {
      const pregunta = preguntasActuales[indicePreguntaActual];
      if (!pregunta) return;

      let texto = `Tengo la siguiente pregunta tipo test:\n\n"${pregunta.pregunta}"\n\n`;
      texto += "Opciones:\n";

      if (pregunta.opciones) {
        Object.entries(pregunta.opciones).forEach(([letra, opcion]) => {
          texto += `- ${letra}: ${opcion}\n`;
        });
      }

      texto += `\nLa respuesta correcta es: ${pregunta.respuestaCorrecta}\n\n`;
      texto += "¬øMe puedes explicar por qu√© esa es la opci√≥n correcta?";

      const encoded = encodeURIComponent(texto);
      window.open(`https://chat.openai.com/?q=${encoded}`, '_blank');
    }

    window.onload = function() {
      console.log('üîÑ P√°gina cargada, inicializando...');
      loadSavedTheme();
      loadStatsPreference();
      
      window.addEventListener('beforeunload', function() {
        guardarProgreso();
      });
    };
  </script>
</body>
</html>
